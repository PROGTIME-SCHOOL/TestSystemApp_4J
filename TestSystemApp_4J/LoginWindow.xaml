<Window x:Class="TestSystemApp_4J.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSystemApp_4J"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="400" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center">
            <Label Content="Sign In" HorizontalAlignment="Center" FontSize="20"/>

            <StackPanel Margin="5" Orientation="Horizontal" Width="200">
                <Label Content="Login:"/>
                <TextBox Name="txtLogin" Width="100" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label Content="Password:"/>
                <TextBox Name="txtPassword" Width="100"/>
            </StackPanel>

            <Button Click="Button_Click" Margin="10" Content="SIGN IN" Background="Orange"/>
        </StackPanel>
    </Grid>
</Window>
